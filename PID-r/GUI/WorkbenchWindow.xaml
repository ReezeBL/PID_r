<Window x:Class="PID_r.GUI.WorkbenchWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
             Width="450" Height="110" ResizeMode="NoResize">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock VerticalAlignment="Center" FontSize="16">Название детали:</TextBlock>
            <TextBox MinWidth="150" Text="{Binding Type}"></TextBox>
        </StackPanel>
        <Button Content="OK" Width="25" HorizontalAlignment="Right" Click="Ok_Clicked"></Button>
    </StackPanel>
</Window>



